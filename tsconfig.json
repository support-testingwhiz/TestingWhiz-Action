{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "outDir": "./dist"
  },
  "exclude": [
    "__fixtures__",
    "__tests__",
    "coverage",
    "dist",
    "node_modules",
    "ReportTemplate"
  ],
  "include": ["src"]
}
